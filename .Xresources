! font options
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! urxvt
URxvt*termName:			rxvt-unicode
URxvt*buffered:			true
URxvt*cursorBlink:		true
URxvt*underlineColor:	blue
URxvt*font:				xft:DejaVuSansMono Nerd Font:size=10
URxvt*boldFont:			xft:DejaVuSansMono Nerd Font:bold:size=10 
URxvt*depth:			32
URxvt*background:		rgba:0000/0043/0054/c800
URxvt*borderless:		true
URxvt*scrollBar:		false
URxvt*loginShell:		true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines:		2000
URxvt*visualBell:		false
URxvt*scrollTtyOutput:  false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress:true

URxvt.perl-ext-common:	default,matcher,resize-font,vtwheel,bell-command
URxvt.url-launcher:		/usr/bin/xdg-open 
URxvt.matcher.button:	1
URxvt.bell-command:		canberra-gtk-play -i bell	

