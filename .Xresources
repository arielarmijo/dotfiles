! urxvt
URxvt*termName:			rxvt-unicode
URxvt*buffered:			true
URxvt*cursorBlink:		true
URxvt*underlineColor:	yellow
URxvt*font:				xft:DejaVu Sans Mono:size=10:antialias=true, xft:Font Awesome 5 Brands Regular:size=7, xft:Font Awesome 5 Free Solid:size=7
URxvt*boldFont:			xft:DejaVu Sans Mono:bold:size=10:antialias=true:hinting=true
URxvt*depth:			32
URxvt*background:		rgba:0000/0043/0054/c800
URxvt*borderless:		1
URxvt*scrollBar:		false
URxvt*loginShell:		true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines:		2000
URxvt*visualBell:		true
URxvt*scrollTtyOutput:  false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress:true

URxvt.perl-ext-common:	default,matcher,resize-font,vtwheel,bell-command
URxvt.url-launcher:		/usr/bin/xdg-open 
URxvt.matcher.button:	1
URxvt.bell-command:		canberra-gtk-play -i bell	

! rofi
rofi.modi:				drun,window,ssh
rofi.theme:				i3
rofi.hide-scrollbar:	true
rofi.width:				30
rofi.lines:				5
rofi.font:				mono 10
rofi.terminal:			urxvtc
rofi.auto-select:       false


